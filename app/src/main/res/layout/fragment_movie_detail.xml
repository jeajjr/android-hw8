<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.almasapp.hw5.almasapp5.MovieDetailFragment"
    android:background="#ffe5e5e5">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:id="@+id/imageViewMovieDetailCover"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:textStyle="bold"
        android:id="@+id/textViewMovieDetailTitle"
        android:layout_alignTop="@+id/imageViewMovieDetailCover"
        android:layout_toEndOf="@+id/imageViewMovieDetailCover"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Year"
        android:id="@+id/textViewMovieDetailYear"
        android:layout_below="@+id/textViewMovieDetailTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="length"
        android:id="@+id/textViewMovieDetailLength"
        android:layout_below="@+id/textViewMovieDetailYear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Description"
        android:id="@+id/textViewMovieDetailDescription"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/imageViewMovieDetailCover"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="starts"
        android:id="@+id/textViewMovieDetailStars"
        android:layout_below="@+id/textViewMovieDetailLength"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="director"
        android:id="@+id/textViewMovieDetailDirector"
        android:layout_below="@+id/textViewMovieDetailStars"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="5dp" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarMovieDetailRating"
        android:numStars="10"
        android:layout_below="@+id/textViewMovieDetailDirector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="5dp" />

</RelativeLayout>